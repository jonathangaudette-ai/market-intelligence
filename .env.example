# ============================================================================
# DATABASE - Neon PostgreSQL (Production) / Local PostgreSQL (Development)
# ============================================================================
# Production (Neon): Get from https://console.neon.tech
# Format: postgresql://user:password@ep-xxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL="postgresql://user:password@host:5432/database"

# ============================================================================
# AUTHENTICATION - NextAuth v5
# ============================================================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="generate-with-openssl-rand-base64-32"
AUTH_TRUST_HOST=true

# ============================================================================
# VECTOR DATABASE - Pinecone
# ============================================================================
# Get from: https://app.pinecone.io
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_INDEX_NAME="market-intelligence-prod"

# ============================================================================
# AI MODELS - REQUIRED FOR INTELLIGENT ANALYSIS
# ============================================================================

# Anthropic Claude Sonnet 4 (for document analysis with extended thinking)
# Get from: https://console.anthropic.com
# Used for: Intelligent document pre-processing, classification, metadata extraction
# Cost: ~$0.10-0.20 per document
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenAI (for embeddings and optional GPT-4 features)
# Get from: https://platform.openai.com
# Used for: Text embeddings (text-embedding-3-large)
# Cost: ~$0.01 per document
OPENAI_API_KEY="your-openai-api-key"

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# Supabase (optional, for file storage)
# If not using Supabase, files are processed in-memory
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Firecrawl (optional, for web scraping)
FIRECRAWL_API_KEY="your-firecrawl-api-key"

# ============================================================================
# APP CONFIGURATION
# ============================================================================
# Local: http://localhost:3010
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL="http://localhost:3010"

# ============================================================================
# VERCEL-SPECIFIC (Auto-configured on Vercel)
# ============================================================================
# These are automatically set by Vercel, no need to configure manually:
# - VERCEL_URL
# - VERCEL_ENV (production, preview, development)
# - VERCEL_REGION
